<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            app:contentPadding="@dimen/card_content_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_wb_incandescent_green_600_24dp"
                    android:drawableStart="@drawable/ic_wb_incandescent_green_600_24dp"
                    android:drawablePadding="8dp"/>

                <com.cunoraz.tagview.TagView
                    android:id="@+id/tagview_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp">

                </com.cunoraz.tagview.TagView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="His/Her grade"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginStart="@dimen/card_margin"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            app:contentPadding="@dimen/card_content_padding">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/line_vertical_margin"
                    android:layout_marginBottom="@dimen/line_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/praise"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_thumb_up_orange_600_24dp"
                        android:drawableStart="@drawable/ic_thumb_up_orange_600_24dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/praise_personal_info"
                        android:text="62"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/line_vertical_margin"
                    android:layout_marginBottom="@dimen/line_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_favorite_red_600_24dp"
                        android:drawableStart="@drawable/ic_favorite_red_600_24dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/favorite_personal_info"
                        android:text="24"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/line_vertical_margin"
                    android:layout_marginBottom="@dimen/line_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patients"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_supervisor_account_grey_600_24dp"
                        android:drawableStart="@drawable/ic_supervisor_account_grey_600_24dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/patients_personal_info"
                        android:text="24"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="His/Her actions"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginStart="@dimen/card_margin"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            app:contentPadding="@dimen/card_content_padding">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/line_vertical_margin"
                    android:layout_marginBottom="@dimen/line_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_comment_light_green_600_24dp"
                        android:drawableStart="@drawable/ic_comment_light_green_600_24dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer_personal_info"
                        android:text="62"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/line_vertical_margin"
                    android:layout_marginBottom="@dimen/line_vertical_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/answer"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_question_answer_cyan_600_24dp"
                        android:drawableStart="@drawable/ic_question_answer_cyan_600_24dp"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/comment_personal_info"
                        android:text="24"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>